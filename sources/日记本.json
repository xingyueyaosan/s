{
    "name": "日记本-星",
    "url": "novel.riji8.com",
    "version": 100,
    "search": {
        "url": "https://novel.riji8.com/book/search?query=${key}",
        "charset": "UTF-8",
        "list": "$..books[*]",
        "name": "$.title",
        "author": "$.author",
        "cover": "$.cover",
        "detail": "https://novel.riji8.com/book/${$._id}"
    },
    "detail": {
        "summary": "分类：${$.cat}\n${$.majorCate}\n标签：${$.tags}\n字数：${$.wordCount}\n${$.longIntro}",
        "status": "$.complete@equal->0@replace->0->连载",
        "update": "$.updated",
        "catalog": "https://novel.riji8.com/mix-atoc/${$._id}?view=chapters"
    },
    "catalog": {
        "list": "$..chapters[*]",
        "name": "$.title",
        "chapter": "$.link"
    },
    "chapter": {
        "content": "$.chapter.body"
    }
}