{
    "name": "星月书吧",
    "url": "xyshu8.com",
    "version": 100,
    "search": {
        "url": "https://m.xyshu8.com/modules/article/search.php?searchtype=articlename&searchkey=${key}&t_btnsearch=",
        "charset": "gbk",
        "list": ".list-item",
        "name": ".article > a",
        "author": ".mr15@replace->作者:->",
        "cover": "img",
        "detail": "a@replace->m.->www."
    },
    "detail": {
        "summary": "#intro",
        "status": "meta[property=og:novel:status]@attr->content",
        "update": "meta[property=og:novel:update_time]@attr->content"
    },
    "catalog": {
        "list": "#list > dl > dd:gt(12)",
        "name": "a",
        "chapter": "a"
    },
    "chapter": {
        "content": "#content",
        "purify": [
            "(.+)www.xyshu8.com(.+)"
        ]
    }
}