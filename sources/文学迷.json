{
    "name": "文学迷-星",
    "url": "wenxuemi.com",
    "version": 100,
    "search": {
        "url": "https://www.wenxuemi.com/search.php?q=${key}",
        "charset": "utf-8",
        "list": ".result-item.result-game-item",
        "name": "h3 > a",
        "author": "p > span + span",
        "cover": "a > img",
        "detail": "h3 > a"
    },
    "detail": {
        "summary": "${.con_top}\n${#intro}",
        "status": "meta[property=og:novel:status]@attr->content",
        "update": "meta[property=og:novel:update_time]@attr->content"
    },
    "catalog": {
        "list": "#list > dl > dd",
        "name": "a",
        "chapter": "a"
    },
    "chapter": {
        "content": "#content"
    }
}